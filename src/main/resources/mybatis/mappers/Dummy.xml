<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.AppUserMapper">

    <resultMap id="UserMap" type="com.boot.dto.AppUserDTO">
        <id property="userId" column="USER_ID"/>
        <result property="kakaoId" column="KAKAO_ID"/>
        <result property="email" column="EMAIL"/>
        <result property="nickname" column="NICKNAME"/>
        <result property="profileImage" column="PROFILE_IMAGE"/>
    </resultMap>

    <select id="findByKakaoId" resultMap="UserMap">
        SELECT * FROM APP_USER WHERE KAKAO_ID = #{kakaoId}
    </select>

    <insert id="insert" parameterType="com.boot.dto.AppUserDTO">
        INSERT INTO APP_USER (
            USER_ID,
            KAKAO_ID,
            EMAIL,
            NICKNAME,
            PROFILE_IMAGE
        ) VALUES (
            SEQ_APP_USER.NEXTVAL,
            #{kakaoId},
            #{email},
            #{nickname},
            #{profileImage}
        )
    </insert>
</mapper>